@model MyBlogSite.DTO.BlogDTO
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bloglar</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Blog Detayı</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <p> Kayıtlı blog detayı</p>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">
                                Başlık <span class="required">*</span>
                            </label>
                            <div class="col-md-9 col-sm-6 col-xs-6">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">@Model.Title</label>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">
                                Kategori <span class="required">*</span>
                            </label>
                            <div class="col-md-9 col-sm-6 col-xs-6">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">@Model.CategoryName</label>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">
                                Yazar <span class="required">*</span>
                            </label>
                            <div class="col-md-9 col-sm-6 col-xs-6">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">@Model.Author</label>
                            </div>
                        </div>
                        <div class="item form-group">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <label class="control-label col-md-12 col-sm-3 col-xs-6" for="CategoryName">@Html.Raw(Model.BlogContent)</label>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-6" for="CategoryName">
                                Kayıt Durumu <span class="required">*</span>
                            </label>
                            <div class="col-md-9 col-sm-6 col-xs-6">
                                <label class="control-label col-md-3 col-sm-3 col-xs-6" for="RecordStatusName">@Model.RecordStatusName</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <a class="btn btn-danger" href="/Blog">İptal</a>
                                <a class="btn btn-success" href="/Blog/Edit/@Model.BlogId">Düzenle</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
