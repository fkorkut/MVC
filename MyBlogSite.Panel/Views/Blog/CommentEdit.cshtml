@model List<MyBlogSite.DTO.CommentDTO>


<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Bloglar</h3>
            </div>
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Onaylanmamış Blog Yorumları</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                            <table id="datatable-myblog" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Yorum ID</th>
                                        <th>Kullanıcı ID</th>
                                        <th>İçerik</th>
                                        <th>Tarih</th>
                                        <th>Onayla</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <input type="hidden" id="BlogId" value="@item.BlogId" />
                                        <input type="hidden" id="UserId" value="@item.UserId" />
                                        <input type="hidden" id="CommentId" value="@item.CommentId" />
                                        <input type="hidden" id="CommentContent" value="@item.CommentContent" />
                                        <input type="hidden" id="CreatedDate" value="@item.CreatedDate" />
                                        <tr>
                                            <td>@item.CommentId</td>
                                            <td>@item.UserId</td>
                                            <td>@Html.Raw(item.CommentContent)</td>
                                            <td>@item.CreatedDate.ToShortDateString()</td>
                                            <td><a href="/Blog/ConfirmCommentEdit/@item.CommentId">Yorum Onaylama Ekranı</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                  
                            </div>

                </div>
            </div>
        </div>
    </div>
</div>
