@model List<MyBlogSite.DTO.BlogDTO>
<!-- Datatables -->
<link href="/Content/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="/Content/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
<link href="/Content/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
<link href="/Content/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="/Content/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Blog Listesi</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div>
            <a class="btn btn-primary" href="/Blog/Save">Yeni Blog</a>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-myblog" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>Kategori</th>
                                    <th>İçerik</th>
                                    <th>Tarih</th>
                                    <th>Detay</th>
                                    <th>Yorumlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.CategoryName</td>
                                        <td>@Html.Raw(item.BlogContent)</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td><a href="/Blog/Get/@item.BlogId">Detay</a></td>
                                        <td><a href="/Blog/CommentEdit/@item.BlogId">Yorumlar</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>